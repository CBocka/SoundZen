<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.cbocka.soundzen.ui.SplashFragment"
        android:label="fragment_first_blank"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_myMusicParentFragment"
            app:destination="@id/myMusicParentFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/myMusicFragment"
        android:name="com.cbocka.soundzen.ui.mymusic.all_music.MyMusicFragment"
        android:label="fragment_my_music"
        tools:layout="@layout/fragment_my_music" />
    <fragment
        android:id="@+id/downloadMusicYTFragment"
        android:name="com.cbocka.soundzen.ui.downloadmusic.yt.DownloadMusicYTFragment"
        android:label="fragment_download_music"
        tools:layout="@layout/fragment_download_music_yt" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.cbocka.soundzen.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <dialog
        android:id="@+id/fragmentProgressDialog"
        android:name="com.cbocka.soundzen.ui.base.FragmentProgressDialog"
        android:label="FragmentProgressDialog" />
    <fragment
        android:id="@+id/downloadMusicParentFragment"
        android:name="com.cbocka.soundzen.ui.downloadmusic.DownloadMusicParentFragment"
        android:label="DownloadMusicParentFragment"
        tools:layout="@layout/fragment_download_music_parent" >
        <action
            android:id="@+id/action_downloadMusicParentFragment_to_fragmentProgressDialog"
            app:destination="@id/fragmentProgressDialog" />
    </fragment>
    <fragment
        android:id="@+id/downloadMusicSearchFragment"
        android:name="com.cbocka.soundzen.ui.downloadmusic.search.DownloadMusicSearchFragment"
        android:label="fragment_download_music_search"
        tools:layout="@layout/fragment_download_music_search" />
    <fragment
        android:id="@+id/myMusicDirectoriesFragment"
        android:name="com.cbocka.soundzen.ui.mymusic.music_directories.MyMusicDirectoriesFragment"
        android:label="fragment_my_music_directories"
        tools:layout="@layout/fragment_my_music_directories" />
    <fragment
        android:id="@+id/myMusicParentFragment"
        android:name="com.cbocka.soundzen.ui.mymusic.MyMusicParentFragment"
        android:label="fragment_my_music_parent"
        tools:layout="@layout/fragment_my_music_parent" >
        <action
            android:id="@+id/action_myMusicParentFragment_to_fragmentProgressDialog"
            app:destination="@id/fragmentProgressDialog" />
        <action
            android:id="@+id/action_myMusicParentFragment_to_songsInDirectoryFragment"
            app:destination="@id/songsInDirectoryFragment" />
        <action
            android:id="@+id/action_myMusicParentFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
        <action
            android:id="@+id/action_myMusicParentFragment_to_choosePlaylistFragment"
            app:destination="@id/choosePlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/songsInDirectoryFragment"
        android:name="com.cbocka.soundzen.ui.mymusic.song_in_directory.SongsInDirectoryFragment"
        android:label="fragment_songs_in_directory"
        tools:layout="@layout/fragment_songs_in_directory" >
        <action
            android:id="@+id/action_songsInDirectoryFragment_to_fragmentProgressDialog"
            app:destination="@id/fragmentProgressDialog" />
        <action
            android:id="@+id/action_songsInDirectoryFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
        <action
            android:id="@+id/action_songsInDirectoryFragment_to_choosePlaylistFragment"
            app:destination="@id/choosePlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/songDetailsFragment"
        android:name="com.cbocka.soundzen.ui.mymusic.song_details.SongDetailsFragment"
        android:label="fragment_song_details"
        tools:layout="@layout/fragment_song_details" />
    <fragment
        android:id="@+id/favouriteSongsFragment"
        android:name="com.cbocka.soundzen.ui.mymusic.favourite_song.FavouriteSongsFragment"
        android:label="fragment_favourite_songs"
        tools:layout="@layout/fragment_favourite_songs" />
    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.cbocka.soundzen.ui.playlists.list.PlaylistFragment"
        android:label="fragment_playlist"
        tools:layout="@layout/fragment_playlist" >
        <action
            android:id="@+id/action_playlistFragment_to_createPlaylistFragment"
            app:destination="@id/createPlaylistFragment" />
        <action
            android:id="@+id/action_playlistFragment_to_songPlaylistFragment"
            app:destination="@id/songPlaylistFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPlaylistFragment"
        android:name="com.cbocka.soundzen.ui.playlists.create.CreatePlaylistFragment"
        android:label="CreatePlaylistFragment" />
    <fragment
        android:id="@+id/choosePlaylistFragment"
        android:name="com.cbocka.soundzen.ui.playlists.choose_playlist.ChoosePlaylistFragment"
        android:label="fragment_choose_playlist"
        tools:layout="@layout/fragment_choose_playlist" />
    <fragment
        android:id="@+id/songPlaylistFragment"
        android:name="com.cbocka.soundzen.ui.playlists.songslist.SongPlaylistFragment"
        android:label="fragment_song_playlist"
        tools:layout="@layout/fragment_song_playlist" >
        <action
            android:id="@+id/action_songPlaylistFragment_to_songDetailsFragment"
            app:destination="@id/songDetailsFragment" />
    </fragment>
</navigation>